# PostgreSQL connection string (local development)
DATABASE_URL=postgresql://your_user:your_password@localhost:5432/your_database

# Secret used by better-auth for signing tokens (32+ bytes hex)
# Generate with: `gen:auth-secret`
BETTER_AUTH_SECRET=your_generated_hex_secret


# Base URL of the Next.js application
# Local development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# MinIO / S3
S3_ENDPOINT=http://localhost:9000
S3_REGION=us-east-1
S3_BUCKET=your-bucket-name
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key
S3_FORCE_PATH_STYLE=true

# SMTP configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=465
SMTP_USER=your_email@example.com
SMTP_PASS=your_email_password
SMTP_FROM="Your Name <your_email@example.com>"

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Seed admin credentials
SEED_ADMIN_EMAIL=your_admin_email@example.com
SEED_ADMIN_PASSWORD=your_admin_password
SEED_ADMIN_NAME=YourAdminName

ALLOWED_EMAIL_DOMAINS="your-domain.com,example.com"