# PostgreSQL connection string (local development)
DATABASE_URL=postgresql://aims_user:aims_password@localhost:5432/aims


# JWE secret used for encrypting client cookies
# Generate with: `pnpm gen:cookie-key`
SECRET_CLIENT_COOKIE_VAR={"kty":"oct","k":"REPLACE_WITH_GENERATED_BASE64_SECRET","alg":"A256CBC","key_ops":["encrypt","decrypt"],"ext":true}


# Secret used by better-auth for signing tokens (32+ bytes hex)
# Generate with: `gen:auth-secret`
BETTER_AUTH_SECRET=REPLACE_WITH_GENERATED_HEX_SECRET


# Base URL of the Next.js application

# Local development
VITE_APP_URL=http://localhost:3000

# Android emulator
# VITE_APP_URL=http://10.0.2.2:3000

# MinIO / S3
S3_ENDPOINT=http://localhost:9000
S3_REGION=us-east-1
S3_BUCKET=your-bucket-name
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key
S3_FORCE_PATH_STYLE=true