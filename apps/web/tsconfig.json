{
  "extends": "@workspace/typescript-config/nextjs.json",
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@workspace/ui/*": [
        "../../packages/ui/src/*"
      ],
      "@workspace/api": [
        "../../packages/api/src/index.ts"
      ],
      "@workspace/auth": [
        "../../packages/auth/src/index.ts"
      ],
      "@workspace/db": [
        "../../packages/db/src/index.ts"
      ],
      "@workspace/infra": [
        "../../packages/infra/src/index.ts"
      ],
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "**/*.mts"
  ],
  "exclude": [
    "node_modules"
  ]
}