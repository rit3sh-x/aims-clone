{
  "extends": "@workspace/typescript-config/base.json",
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@workspace/auth": [
        "./src/index.ts"
      ],
      "@workspace/db/*": [
        "../../packages/db/src/*"
      ],
      "@workspace/infra": [
        "../../packages/infra/src/index.ts"
      ],
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}